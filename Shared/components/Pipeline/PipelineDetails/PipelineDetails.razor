@namespace Project.Shared
@using System.Linq

<div id="pipeline-details" class="d-flex f-1 flex-column px-7 py-2">
  <div class="title font-20 font-secondary pl-2">
    Opportunity Details
  </div>

  <div class="content">
    @for (int i = 0; i < GetBorrowers.Count; i++)
    {
      int index = i;
      var borrower = GetBorrowers.ElementAt(index);

      <BorrowerCard
        Borrower="borrower"
      ></BorrowerCard>
    }
  </div>

  <div class="content px-1 pt-7">
    <div class="detail-card">
      <div class="card-title mb-0">Opportunity</div>
      <div class="card-content">3576982351</div>
    </div>

    <div class="detail-card">
      <div>Loan Status</div>
      <div>Unstatused</div>
    </div>

    <div class="detail-card">
      <div>Property Address</div>
      <div class="d-flex flex-column">
        <span>1234 Main St.</span>
        <span>Anytown USA 55555</span>
      </div>
    </div>

    <div class="detail-card">
      <div>Opportunity Group Name</div>
      <div>Purchase Chat</div>
    </div>

    <div class="detail-card">
      <div>Loan Purpose</div>
      <div>Purchase</div>
    </div>
  </div>
</div>