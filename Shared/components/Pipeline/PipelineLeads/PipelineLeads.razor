@namespace Project.Shared
@using Project.Models

<div id="pipeline" class="d-flex flex-column">
  @for (int i = 0; i < Leads.Count; i++)
  {
    int index = i;
    Lead lead = Leads[index];
    var primary = GetPrimaryBorrower(lead);

    <div id="lead-summary"
      class="d-flex flex-row rounded-l-lg inverted-border-radius py-2"
    >
      @if(index != 0) {
        <MudIcon
          class="pt-2"
          style="font-size: 28px;"
          Icon="@Icons.Material.Filled.DragIndicator"
        ></MudIcon>
      }
 
      <div class="d-flex flex-column rounded-l-lg py-3">
        <span class="line-h-3 font-16 font-secondary d-flex flex-column">@lead.LeadId</span>
        <span class="borrower">@primary.FirstName @primary.LastName</span>
      </div>

    </div>
  }
</div>
